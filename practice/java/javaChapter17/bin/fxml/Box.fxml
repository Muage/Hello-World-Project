<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets bottom="10" left="10" right="10" top="10"/>
	</padding>
	<children>
		<ImageView fitWidth="200" preserveRatio="true">	<!-- 사진 비율에 맞게 높이 지정 --> 
			<image>
				<Image url="@javafx.jpg"/>	<!-- 현재 경로 기준으로 상대 경로 파일 지정 --> 
			</image>
		</ImageView>
		<HBox alignment="CENTER" spacing="20">
			<children>
				<Button text="이전"/>
				<Button text="다음"/>
			</children>
			<VBox.margin>
				<Insets top="10"/>
			</VBox.margin>
		</HBox>
	</children>
</VBox>

