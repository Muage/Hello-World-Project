					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div id="content">
		<%- include(pageName) %>
	</div>
</body>
<script>
	$("#register").on("click", (e) => {
		e.preventDefault();

		var email = $("#email").html();
		if(email == "" || email == null) {
			location.href = '/users/login';
		} else {
			location.href = '/products/insert';
		}
	});
</script>
