<form name="frm" method="post">
    <table id="insert" width="450">
        <tr>
            <td class="insertTableLeft">교수번호</td>
            <td class="insertTableRight"><input type="text" name="pcode" value = "<%= ncode %>"></td>
        </tr>
        <tr>
            <td class="insertTableLeft">교수이름</td>
            <td class="insertTableRight"><input type="text" name="pname"></td>
        </tr>
        <tr>
            <td class="insertTableLeft">교수학과</td>
            <td class="insertTableRight">
                <select name="dept">
                    <option value="전자">전자공학과</option>
                    <option value="전산" selected>컴퓨터공학과</option>
                    <option value="건축">건축공학과</option>
                    <option value="통신">컴퓨터통신학과</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="insertTableLeft">임용일자</td>
            <td class="insertTableRight">
                <input type="text" name="yy" size="4" maxlength="4" value="2022">년
                <input type="text" name="mm" size="2" maxlength="2" value="07">월
                <input type="text" name="dd" size="2" maxlength="2" value="01">일
            </td>
        </tr>
        <tr>
            <td class="insertTableLeft">교수직급</td>
            <td class="insertTableRight">
                <input type="radio" name="title" value="정교수">정교수
                <input type="radio" name="title" value="부교수" checked>부교수
                <input type="radio" name="title" value="조교수">조교수
            </td>
        </tr>
        <tr>
            <td class="insertTableLeft">교수급여</td>
            <td class="insertTableRight"><input type="text" name="salary"></td>
        </tr>
    </table>
    <div class="buttons">
        <button type="submit">교수등록</button>
        <button type="reset">등록취소</button>
    </div>
</form>
<script>
    $(frm).on("submit", function(e) {
        e.preventDefault();
        var pname = $(frm.pname).val();
        var salary = $(frm.salary).val();

        if(pname == "") {
            alert("교수이름을 입력해주세요.");
            $(frm.pname).focus();
            return;
        }

        if(salary.replace(/[0-9]/g,'') || salary == "") {
            alert("교수급여를 숫자로 입력해주세요.");
            $(frm.salary).focus();
            $(frm.salary).val("");
            return;
        }

        if(!confirm("새로운 교수를 등록하시겠습니까?")) return;
        frm.submit();
    })
</script>